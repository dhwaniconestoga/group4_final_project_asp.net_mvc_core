@model IEnumerable<Category>

@{
    ViewData["Title"] = " | Manage Categories";
}

<div class="container">
    <div class="page-title">
        <h3>Manage Categories</h3>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">Category List</div>
                <div class="card-body">
                    <p class="card-title"><a class="btn btn-sm btn-outline-primary" asp-action="Add" asp-area="Admin"><i class="fas fa-plus-circle"></i> Add a Category</a></p>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">CategoryId</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Category category in Model)
                                {
                                    <tr>
                                        <td>@category.CategoryId</td>
                                        <td>@category.Name</td>
                                        <td>
                                            <a asp-action="ViewProducts" asp-area="Admin" asp-route-id="@category.CategoryId" class="btn btn-outline-secondary btn-rounded"><i class="fas fa-eye"></i> Products</a>
                                            <a asp-action="Edit" asp-area="Admin" asp-route-id="@category.CategoryId" class="btn btn-outline-info btn-rounded"><i class="fas fa-pen"></i> Edit</a>

                                            <a asp-action="Delete" asp-area="Admin" asp-route-id="@category.CategoryId" class="btn btn-outline-danger btn-rounded"><i class="fas fa-trash"></i> Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




