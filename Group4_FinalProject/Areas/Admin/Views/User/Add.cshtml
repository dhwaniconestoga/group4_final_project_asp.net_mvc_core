@model RegisterViewModel
@{
    ViewBag.Title = "Add User";
}


<div class="container">
    

    <div class="page-title">
        <h3>Manage User</h3>
    </div>
    <div class="row">

        <div class="col-lg-12">
            <div class="card">
                <div class="card-header"> Add User</div>
                <div class="card-body">
                    <h5 class="card-title"><div asp-validation-summary="ModelOnly" class="text-danger"></div></h5>
                    <form method="post" asp-action="Add">
                        <div class="mb-3 form-group row">
                            <div class="col-sm-2"><label>Username:</label></div>
                            <div class="col-sm-4">
                                <input type="text" asp-for="Username"
                                       class="form-control" />
                            </div>
                            <div class="col">
                                <span asp-validation-for="Username"
                                      class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3 form-group row">
                            <div class="col-sm-2"><label>Password:</label></div>
                            <div class="col-sm-4">
                                <input type="password" asp-for="Password"
                                       class="form-control" />
                            </div>
                            <div class="col">
                                <span asp-validation-for="Password"
                                      class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3 form-group row">
                            <div class="col-sm-2"><label>Confirm Password:</label></div>
                            <div class="col-sm-4">
                                <input type="password" asp-for="ConfirmPassword"
                                       class="form-control" />
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <div class="offset-2 col-sm-4">
                                <button type="submit" class="btn btn-sm btn-primary"><i class="fas fa-plus-circle"></i> Add</button>
                                <a asp-action="Index" class="btn btn-sm btn-secondary"><i class="fas fa-times"></i> Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

