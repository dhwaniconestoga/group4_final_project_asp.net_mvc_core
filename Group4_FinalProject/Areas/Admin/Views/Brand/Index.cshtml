@model IEnumerable<Brand>

@{
    ViewData["Title"] = " | Manage Brands";
}

<div class="container">
    <div class="page-title">
        <h3>Manage Brands</h3>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">Brand List</div>
                <div class="card-body">
                    <p class="card-title"><a class="btn btn-sm btn-outline-primary" asp-action="Add" asp-area="Admin"><i class="fas fa-plus-circle"></i> Add a Brand</a></p>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">BrandId</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Brand brand in Model)
                                {
                                    <tr>
                                        <td>@brand.BrandId</td>
                                        <td>@brand.Name</td>
                                        <td>
                                            <form asp-action="Select" method="post" class="form-inline">

                                            <input type="hidden" name="id" value="@brand.BrandId" />
                                            <button type="submit" name="Operation" value="View Products" class="btn btn-outline-secondary btn-rounded ml-2 mr-2"><i class="fas fa-eye"></i> Products</button>
                                            <button type="submit" name="Operation" value="Edit" class="btn btn-outline-info btn-rounded ml-2 mr-2"><i class="fas fa-pen"></i> Edit</button>
                                            <button type="submit" name="Operation" value="Delete" class="btn btn-outline-danger btn-rounded ml-2 mr-2"><i class="fas fa-trash"></i> Delete</button>

                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
