@model SearchViewModel

@{
    ViewData["Title"] = " | Search Results";
}

<div class="container">
    <div class="page-title">
        <h3>Manage Products</h3>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header"><i>@Model.Header</i></div>
                <div class="card-body">
                    <p class="card-title"><a class="btn btn-sm btn-outline-primary" asp-action="Index"><i class="fas fa-search"></i> New Search</a></p>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">Product</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Brand</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.Products)
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="Details" asp-controller="Product"
                                           asp-area="" asp-route-id="@product.ProductId"
                                           asp-route-slug="@product.Title.Slug()">@product.Title</a>
                                        </td>
                                        <td>@product.Category.Name</td>
                                        <td>
                                            @foreach (ProductBrand ba in product.ProductBrands)
                                            {
                                                <div>@ba.Brand.FullName</div>
                                            }
                                        </td>
                                        <td>
                                            <div class="float-right">
                                                <a asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-outline-info btn-rounded"><i class="fas fa-pen"></i> Edit</a>

                                                <a asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-outline-danger btn-rounded"><i class="fas fa-trash"></i> Delete</a>
                                        
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
